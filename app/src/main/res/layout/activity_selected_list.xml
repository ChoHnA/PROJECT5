<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ListView
        android:id="@+id/selectedlist"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        fab:layout_constraintBottom_toBottomOf="parent"
        fab:layout_constraintTop_toBottomOf="@+id/imageView" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="500dp"
        android:layout_height="70dp"
        android:src="#98dde4" />

    <TextView
        android:id="@+id/money"
        android:layout_width="270dp"
        android:layout_height="45dp"
        android:layout_margin="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginBottom="14dp"
        android:background="@drawable/bg_edit_text2"
        android:fontFamily="@font/nanumsquarel"
        android:gravity="right"
        android:hint="0"
        android:imeActionId="4"
        android:imeOptions="actionSend"
        android:inputType="text"
        android:padding="8dp"
        android:textColor="#000000"
        android:textColorHint="#606060"
        android:textSize="24sp"
        fab:layout_constraintBottom_toBottomOf="@+id/imageView"
        fab:layout_constraintEnd_toStartOf="@+id/textView_money"
        fab:layout_constraintStart_toEndOf="@+id/textView_left" />

    <TextView
        android:id="@+id/textView_money"
        android:layout_width="37dp"
        android:layout_height="45dp"
        android:layout_margin="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="12dp"
        android:fontFamily="@font/nanumsquarel"
        android:imeActionId="4"
        android:imeOptions="actionSend"
        android:inputType="text"
        android:padding="8dp"
        android:text="원"
        android:textColor="#000000"
        android:textColorHint="#606060"
        android:textSize="23sp"
        android:visibility="visible"
        fab:layout_constraintBottom_toBottomOf="@+id/imageView"
        fab:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/textView_left"
        android:layout_width="70dp"
        android:layout_height="45dp"
        android:layout_margin="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginBottom="12dp"
        android:fontFamily="@font/nanumsquarel"
        android:imeActionId="4"
        android:imeOptions="actionSend"
        android:inputType="text"
        android:padding="8dp"
        android:text="잔고 : "
        android:textColor="#000000"
        android:textColorHint="#606060"
        android:textSize="24sp"
        android:visibility="visible"
        fab:layout_constraintBottom_toBottomOf="@+id/imageView"
        fab:layout_constraintStart_toStartOf="parent" />

    <com.github.clans.fab.FloatingActionMenu
        android:id="@+id/material_design_android_floating_action_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        fab:layout_constraintBottom_toBottomOf="parent"
        fab:layout_constraintEnd_toEndOf="parent"
        fab:menu_animationDelayPerItem="55"
        fab:menu_backgroundColor="@android:color/transparent"
        fab:menu_buttonSpacing="0dp"
        fab:menu_colorNormal="#da3c2f"
        fab:menu_colorPressed="#dc4b3f"
        fab:menu_colorRipple="#99d4d4d4"
        fab:menu_fab_size="normal"
        fab:menu_icon="@drawable/fab_add"
        fab:menu_labels_colorNormal="#333"
        fab:menu_labels_colorPressed="#444"
        fab:menu_labels_colorRipple="#66efecec"
        fab:menu_labels_cornerRadius="3dp"
        fab:menu_labels_ellipsize="none"
        fab:menu_labels_hideAnimation="@anim/fab_slide_out_to_right"
        fab:menu_labels_margin="0dp"
        fab:menu_labels_maxLines="-1"
        fab:menu_labels_padding="8dp"
        fab:menu_labels_position="left"
        fab:menu_labels_showAnimation="@anim/fab_slide_in_from_right"
        fab:menu_labels_showShadow="true"
        fab:menu_labels_singleLine="false"
        fab:menu_labels_textColor="#f2f1f1"
        fab:menu_labels_textSize="15sp"
        fab:menu_openDirection="up"
        fab:menu_shadowColor="#66aff198"
        fab:menu_shadowRadius="4dp"
        fab:menu_shadowXOffset="1dp"
        fab:menu_shadowYOffset="4dp"
        fab:menu_showShadow="true">

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/addBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="addList"
            android:src="@android:drawable/ic_menu_search"
            fab:fab_label="검색"
            fab:fab_size="mini" />

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/selfBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="addSelf"
            android:src="@android:drawable/ic_input_add"
            fab:fab_label="직접추가"
            fab:fab_size="mini" />
    </com.github.clans.fab.FloatingActionMenu>
</android.support.constraint.ConstraintLayout>